Private Sub Import_Text_Click()
    Convert
End Sub

Sub Convert()
    Dim time As String
    Dim load As String
    Dim day As String
    Dim row As Integer
    Dim col As Integer
    row = 1
    col = 1
    Open "C:\DATALOG.txt" For Input As #1 'change depending on location of file '
    While Not EOF(1)
        Input #1, load
        Cells(row, col) = load
        col = 3
        Input #1, day
        Cells(row, col) = day
        col = 2
        Input #1, time
        Cells(row, col) = time
        row = row + 1
        col = 1 
    Wend
    Close 1
End Sub
